<img src="/public/images/banner.jpg" alt="image of lake">
<br>
<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>

<form action="/comments" method="POST">
  <label>Comment:
    <textarea name="comment[body]"
    cols="30" 
    rows="10"><%= @comment.body %></textarea>
  </label>
  <br>
  <label for="comment-field">Form Authenticity Token</label>
    <input 
      type="text" 
      name="authenticity_token" 
      id="comment-field"
      value="<%= form_authenticity_token %>">
  <br>
  <label>Name: 
    <input type="text" name="comment[username]">
  </label>
  <br>
  <input type="hidden" name="comment[post_id]" value="<%= @post_id %>">
  <input type="submit" value="make comment">
</form>
<br>
<a href="/posts/<%= @post_id %>">back to post</a>